<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMemberActivity">

    <TextView
        android:id="@+id/text_view_first_name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:text="First Name"
        app:layout_constraintTop_toTopOf="@id/edit_first_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/edit_first_name"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_first_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_view_first_name"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="First Name"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_last_name"
        android:text="Last Name"
        app:layout_constraintTop_toTopOf="@id/edit_last_name"
        app:layout_constraintBottom_toBottomOf="@id/edit_last_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_last_name"
        app:layout_constraintTop_toBottomOf="@id/edit_first_name"
        app:layout_constraintRight_toRightOf="@id/edit_first_name"
        app:layout_constraintLeft_toRightOf="@id/text_view_last_name"
        android:hint="Last Name"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_view_gender"
        android:text="Gender"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/spinner_gender"
        app:layout_constraintBottom_toBottomOf="@id/spinner_gender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner_gender"
        app:layout_constraintTop_toBottomOf="@id/edit_last_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toRightOf="@id/text_view_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_view_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_group"
        app:layout_constraintBottom_toBottomOf="@id/edit_group"
        android:text="Group"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_group"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_gender"
        app:layout_constraintLeft_toRightOf="@id/text_view_group"

        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>